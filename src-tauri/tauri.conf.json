{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "XELIS Paper Wallet",
  "version": "0.1.0",
  "identifier": "io.xelis.paperwallet",
  "build": {
    "frontendDist": "../public",
    "devUrl": "http://localhost:9966"
  },
  "app": {
    "windows": [
      {
        "title": "XELIS Paper Wallet",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
